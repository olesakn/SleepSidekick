<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cis368.sleepsidekick"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="Sleep Sidekick"
        android:theme="@android:style/Theme.Holo" >
        <activity
            android:name="com.cis368.sleepsidekick.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity 
            android:name="com.cis368.sleepsidekick.CreateAlarmActivity"
            android:label="Create Alarm" />
        
        <activity 
            android:name="com.cis368.sleepsidekick.CreateSleepAidActivity"
            android:label="Create Sleep Aid" />
        
        <activity 
            android:name="com.cis368.sleepsidekick.ScheduleActivity"
            android:label="Schedule" />
        
        <activity 
            android:name="com.cis368.sleepsidekick.StatisticsActivity"
            android:label="Statistics" />
        
        <activity 
            android:name="com.cis368.sleepsidekick.SleepingActivity"
            android:label="Sleep"/>
        
        <activity 
            android:name="com.cis368.sleepsidekick.TaskMathProblemActivity"
            android:windowSoftInputMode="stateAlwaysVisible"
            android:label="Wake Up!" />
        
        <activity 
            android:name="com.cis368.sleepsidekick.WakeUpActivity"
            android:label="Wake Up!" />
        
    </application>
</manifest>