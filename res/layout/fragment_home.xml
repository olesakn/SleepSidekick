<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/black"
    tools:context=".HomeActivity$DummySectionFragment" >

    <DigitalClock
        android:id="@+id/home_digitalClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="DigitalClock"
        android:textSize="32dp" />

    <AnalogClock
        android:id="@+id/home_analogClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_digitalClock"
        android:layout_centerHorizontal="true"
        android:background="@android:color/black" />

    <Button
        android:id="@+id/home_button_go_to_sleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_analogClock"
        android:layout_centerHorizontal="true"
        android:height="80dp"
        android:text="Go To Sleep!"
        android:textColor="@android:color/white"
        android:width="300dp" />

</RelativeLayout>
