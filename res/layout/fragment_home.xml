<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/black"
    tools:context=".HomeActivity$DummySectionFragment" >


    <Button
        android:id="@+id/home_button_go_to_sleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_digitalClock"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:height="80dp"
        android:text="Go To Sleep"
        android:textSize="28dp"
        android:textColor="@android:color/white"
        android:width="300dp" />

    <TextView
        android:id="@+id/home_textview_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="February 10th"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <DigitalClock
        android:id="@+id/home_digitalClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_textview_date"
        android:layout_centerHorizontal="true"
        android:text="DigitalClock"
        android:textColor="@android:color/white"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/textView1"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_button_go_to_sleep"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Alarm set for 9:00 am\nTuesday, February 11\n12 hours, 30 mins from now"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/home_button_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/home_button_go_to_sleep"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="38dp"
        android:height="75dp"
        android:text="Schedule"
        android:textColor="@android:color/white"
        android:width="125dp" />
    
    <Button
        android:id="@+id/home_button_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/home_button_schedule"
        android:layout_alignBottom="@+id/home_button_schedule"
        android:layout_alignRight="@+id/home_button_go_to_sleep"
        android:height="75dp"
        android:text="Statistics"
        android:textColor="@android:color/white"
        android:width="125dp" />

</RelativeLayout>
